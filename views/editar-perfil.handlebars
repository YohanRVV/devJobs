<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" id="" placeholder="Tu Nombre" value={{usuario.nombre}}>
        </div>

        <div class="campo">
            <label>Email</label>
            <input type="email" name="email" id="" placeholder="Tu Email" value={{usuario.email}}>
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" id="" placeholder="Tu Password">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" id="" placeholder="Tu Imagen de Perfil">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="">
        </div>

        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>


    </form>
</main>